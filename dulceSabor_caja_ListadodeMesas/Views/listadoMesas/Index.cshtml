@model IEnumerable<dulceSabor_caja_ListadodeMesas.Models.mesas>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<h1>Lista de Mesas</h1>

<table class="table table-striped-columns">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id_mesa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cantidad_personas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.id_estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre_mesa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in (IEnumerable<dynamic>)ViewData["listadoDeMesas"])
        {
            <tr>
                <td>
                    @item.id_mesa
                </td>
                <td>
                    @item.cantidad_personas
                </td>
                <td>
                    @item.nombre_estado
                </td>
                <td>
                    @item.nombre_mesa
                </td>
                <td>
                    <div class="row align-items-center">
                        <div class="col-3">
                            <a asp-action="listaCuentas" asp-route-id="@item.id_mesa"><button type="button" class="btn btn-success">Ver</button></a>
                        </div>
                    </div>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
