@model IEnumerable<dulceSabor_caja_ListadodeMesas.Models.mesas>

@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado de Mesas - Dulce Sabor</title>
    <style>
        /* Estilos generales */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f2f2f2;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            color: #333;
        }

        /* Estilos de la tabla */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th,
        td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        /* Estilos de los botones */
        .btn {
            padding: 8px 16px;
            border: none;
            background-color: #4CAF50;
            color: white;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .btn:hover {
                background-color: #45a049;
            }
    </style>
</head>

<body>
    <div class="container">
        <h1>Listado de Mesas - Dulce Sabor</h1>
        <table>
            <thead>
                <tr>
                    <th>Nombre de la Mesa</th>
                    <th>Estado</th>
                    <th>Cantidad de Personas</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <!-- Ejemplo de datos de la mesa -->
                @foreach (var item in (IEnumerable<dynamic>)ViewData["listadoDeMesas"])
                {
                    <tr>
                        <td>
                            @item.nombre_mesa
                        </td>
                        <td>
                            @item.nombre_estado
                        </td>
                        <td>
                            @item.cantidad_personas
                        </td>
                        <td>
                            <div class="row align-items-center">
                                <div class="col-3">
                                    <a asp-action="listaCuentas" asp-route-id="@item.id_mesa"><button type="button" class="btn">Ver</button></a>
                                </div>
                            </div>

                        </td>
                    </tr>
                }
                <!-- Puedes agregar más filas con datos dinámicos aquí -->
            </tbody>
        </table>
    </div>
</body>

</html>
